{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_wallet_list'|trans }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">
{% endblock %}

{% block body %}
    <h1>{{ 'title_wallet_list'|trans }}</h1>


    <!--    DATE FORM  -->
    {{ form_start(form, { method: 'GET', action: url('wallet_search') }) }}
    {% if false == form.vars.valid %}
        {% include 'default/_single_flash_message.html.twig' with {
            type: 'danger',
            message: 'message_form_error'|trans,
        }%}
    {% endif %}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    {{ form_end(form) }}

    <!-- END  DATE FORM    -->
    {# {{ form(form) }}#}

    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>



        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_created_at'|trans, 'wallet.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_paymentType'|trans, 'wallet.paymentType.code') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_transaction'|trans, 'wallet.transactionType.code') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_label'|trans, 'wallet.label.name') }}</th>
                <th>{{ 'label_amount'|trans }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for wallet in pagination.items %}
                <tr>
                    <td>{{ wallet.createdAt|date("d/m/Y") }}</td>
                    <td>
                        <a href="{{ url('wallet_index', {'filters' : {'paymentType' : wallet.paymentType.id}}) }}" title="{{ wallet.paymentType.code }}">{{ wallet.paymentType.code|trans }}
                    </td>
                    <td>
                        <a href="{{ url('wallet_index', {'filters' : {'transactionType' : wallet.transactionType.id}}) }}" title="{{ wallet.transactionType.code }}">{{ wallet.transactionType.code }}
                    </td>
                    <td>
                        <a href="{{ url('wallet_index', {'filters' : {'label' : wallet.label.id}}) }}" title="{{ wallet.label.name }}">{{ wallet.label.name }}
                    </td>
                    <td>{{ wallet.amount }}</td>
                    <td>
                        {% if is_granted('VIEW', wallet) %}
                            <a href="{{ url('wallet_show', {id: wallet.id}) }}" title="{{ 'action_view'|trans }}">
                                {{ 'action_view'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('EDIT', wallet) %}
                            <a href="{{ url('wallet_edit', {id: wallet.id}) }}" title="{{ 'action_edit'|trans }}">
                                {{ 'action_edit'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('DELETE', wallet) %}
                            <a href="{{ url('wallet_delete', {id: wallet.id}) }}" title="{{ 'action_delete'|trans }}">
                                {{ 'action_delete'|trans }}
                            </a>
                        {% endif %}

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <h3>{{ balance }}</h3>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        jQuery(document).ready(function() {
            $('.js-datepicker').datepicker();
        });
    </script>
{% endblock %}