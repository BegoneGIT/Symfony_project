{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_wallet_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_wallet_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'wallet.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_created_at'|trans, 'wallet.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_paymentType'|trans, 'wallet.paymentType') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_transaction'|trans, 'wallet.transaction') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_label'|trans, 'wallet.label.name') }}</th>
                <th>{{ 'label_amount'|trans }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for wallet in pagination.items %}
                <tr>
                    <td>{{ wallet.id }}</td>
                    <td>{{ wallet.createdAt|date("d/m/Y") }}
                    <td>
                        {% if wallet.paymentType %}
                            {{ 'label_income' }}
                        {% else %}
                            {{ 'label_expense' }}
                        {% endif %}
                    </td>
                    <td>
                        {% if wallet.transaction %}
                            {{ 'label_card' }}
                        {% else %}
                            {{ 'label_cash' }}
                        {% endif %}
                    </td>
                    <td>{{ wallet.label.name }}</td>
                    <td>{{ wallet.amount }}</td>
                    <td>
                        {% if is_granted('VIEW', wallet) %}
                            <a href="{{ url('wallet_show', {id: wallet.id}) }}" title="{{ 'action_view'|trans }}">
                                {{ 'action_view'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('EDIT', wallet) %}
                            <a href="{{ url('wallet_edit', {id: wallet.id}) }}" title="{{ 'action_edit'|trans }}">
                                {{ 'action_edit'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('DELETE', wallet) %}
                        <a href="{{ url('wallet_delete', {id: wallet.id}) }}" title="{{ 'action_delete'|trans }}">
                            {{ 'action_delete'|trans }}
                        </a>
                        {% endif %}

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}