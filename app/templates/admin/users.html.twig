{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_users_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_users_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label_email'|trans }}</th>
                <th>{{ 'label_roles'|trans }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination.items %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>
                        {% for role in user.roles %}
                        {{ role|trans }}
                        {% endfor %}
                    </td>
                    <td>
{#                        {% if is_granted('VIEW', user) %}#}
{#                            <a href="{{ url('users_show', {id: user.id}) }}" title="{{ 'action_view'|trans }}">#}
{#                                {{ 'action_view'|trans }}#}
{#                            </a>#}
{#                        {% endif %}#}
                        {% if is_granted('EDIT', user) %}
                            <a href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'action_edit'|trans }}">
                                {{ 'action_edit'|trans }}
                            </a>
                        {% endif %}
{#                        {% if is_granted('DELETE', user) %}#}
{#                        <a href="{{ url('users_delete', {id: user.id}) }}" title="{{ 'action_delete'|trans }}">#}
{#                            {{ 'action_delete'|trans }}#}
{#                        </a>#}
{#                        {% endif %}#}

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}